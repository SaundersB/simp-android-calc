<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#000000"
    android:id="@+id/capacitancestring">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:id="@+id/enter"
        android:onClick="onClickEnter"
        android:layout_above="@+id/clear"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clear"
        android:onClick="onClickClear"
        android:layout_above="@+id/donebutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/capacitancefield"
        android:background="#ffffffff"
        android:layout_below="@+id/capacitancetxt"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/electricchargetext"
        android:layout_marginStart="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capacitance"
        android:id="@+id/capacitancetxt"
        android:textSize="20sp"
        android:textColor="#fffff7ff"
        android:layout_above="@+id/voltagetext"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Electric Charge"
        android:id="@+id/electricchargetext"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/electricchargefield"
        android:layout_alignParentStart="true" />
        //android:layout_below="@+id/capacitancefield"
        //android:layout_alignParentStart="true"
    />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/electricchargefield"
        android:background="#ffffffff"
        android:layout_above="@+id/capacitancetxt"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="33dp"
        android:layout_alignStart="@+id/voltagefield" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltage"
        android:id="@+id/voltagetext"
        android:textSize="20sp"
    android:textColor="#FFFFFF"
        android:layout_above="@+id/enter"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="62dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/voltagefield"
        android:background="#ffffffff"
        android:layout_alignBottom="@+id/capacitancetxt"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/capacitancefield" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/donebutton"
        android:onClick="onClickExit"
        android:layout_above="@+id/moreinfo"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/moreinfo" />
        //android:layout_below="@+id/clear"
        //android:layout_alignStart="@+id/moreinfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Capacitance"
        android:id="@+id/CalcCapacHead"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:id="@+id/moreinfo"
        android:onClick="OnClickMoreInfo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
